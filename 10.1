import pandas as pd
import matplotlib.pyplot as plt
data = {
    'Month': ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
    'Temperature': [30, 32, 35, 40, 42, 45, 44, 43, 39, 35, 32, 30],
    'Rainfall': [3.1, 2.8, 3.5, 3.0, 2.5, 3.2, 4.0, 3.8, 3.6, 3.1, 2.9, 3.0]
}
df = pd.DataFrame(data)
plt.figure(figsize=(12, 6))
plt.plot(df['Month'], df['Temperature'], marker='o', linestyle='-', color='b', label='Temperature (°C)')
plt.title('Monthly Temperature Data', fontsize=16)
plt.xlabel('Month', fontsize=14)
plt.ylabel('Temperature (°C)', fontsize=14)
plt.xticks(rotation=45)
plt.grid(True)
plt.legend()
plt.tight_layout()
plt.savefig('monthly_temperature.png')
plt.show()
plt.figure(figsize=(12, 6))
plt.scatter(df['Month'], df['Rainfall'], color='r', label='Rainfall (inches)')
plt.title('Monthly Rainfall Data', fontsize=16)
plt.xlabel('Month', fontsize=14)
plt.ylabel('Rainfall (inches)', fontsize=14)
plt.xticks(rotation=45)
plt.grid(True)
plt.legend()
plt.tight_layout()
plt.savefig('monthly_rainfall.png')
plt.show()
