import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

data = pd.DataFrame({
    'Year': [2015, 2016, 2017, 2018, 2019],
    'smoking_patients': [200, 220, 240, 260, 300],
    'lung_cancer_patients': [25, 30, 35, 40, 55]
})

smoking_patients = data['smoking_patients'].values
lung_cancer_patients = data['lung_cancer_patients'].values

correlation_coefficient = np.corrcoef(smoking_patients, lung_cancer_patients)[0, 1]
print(f"Correlation Coefficient between Smoking and Lung Cancer: {correlation_coefficient:.2f}")

plt.scatter(smoking_patients, lung_cancer_patients, color='red')
plt.title('Smoking Patients vs Lung Cancer Patients')
plt.xlabel('Number of Smoking Patients')
plt.ylabel('Number of Lung Cancer Patients')
plt.grid(True)
plt.show()
