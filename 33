import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

np.random.seed(42)  # For reproducibility
sample_sales = np.random.randint(150, 200, size=12)
sample_advertising = np.random.randint(2000, 3000, size=12)
data = pd.DataFrame({
    'Sales': sample_sales,
    'Advertising': sample_advertising
})

data.to_csv('sales_advertising.csv', index=False)

sales = data['Sales'].values
advertising = data['Advertising'].values

correlation_coefficient = np.corrcoef(sales, advertising)[0, 1]
print(f"Correlation Coefficient between Sales and Advertising: {correlation_coefficient:.2f}")

plt.scatter(advertising, sales, color='blue')
plt.title('Sales vs Advertising')
plt.xlabel('Advertising Spend ($)')
plt.ylabel('Sales')
plt.grid(True)
plt.show()
